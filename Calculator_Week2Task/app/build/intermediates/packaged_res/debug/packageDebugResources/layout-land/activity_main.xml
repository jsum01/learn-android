<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ExtraText">
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:gravity="right"
        android:text="TextView"
        android:textSize="30sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Button
        android:id="@+id/btn8"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="8" />

    <Button
        android:id="@+id/btn7"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintTop_toTopOf="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="7" />

    <Button
        android:id="@+id/btn9"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="9" />

    <Button
        android:id="@+id/btnPlus"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toTopOf="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="+" />

    <Button
        android:id="@+id/btn4"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintTop_toTopOf="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="4" />

    <Button
        android:id="@+id/btnMultiply"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toTopOf="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="*" />

    <Button
        android:id="@+id/btnCancel"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintEnd_toStartOf="@+id/btn0"
        app:layout_constraintTop_toTopOf="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="C" />

    <Button
        android:id="@+id/btn0"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintEnd_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0" />

    <Button
        android:id="@+id/btnAllClear"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintStart_toStartOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="AC"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnEqual"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintStart_toEndOf="@+id/btnAllClear"
        app:layout_constraintTop_toTopOf="@+id/btnAllClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="=" />

    <Button
        android:id="@+id/btn1"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="1" />

    <Button
        android:id="@+id/btn5"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintEnd_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="5" />

    <Button
        android:id="@+id/btn3"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintStart_toStartOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="3" />

    <Button
        android:id="@+id/btn6"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintStart_toStartOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="6" />

    <Button
        android:id="@+id/btnMinus"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="-" />

    <Button
        android:id="@+id/btn2"
        style="@style/Widget.AppCompat.Button.Small"
        app:layout_constraintEnd_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="2" />
</androidx.constraintlayout.widget.ConstraintLayout>